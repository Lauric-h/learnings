{% extends 'base.html.twig' %}

{% block title %}Hello BlogpostController!{% endblock %}

{% block body %}
    <section class="contact-section bg-black">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5">
                {% for blogpost in blogposts %}
                    <div class="col-md-4 mb-3 mb-md-0 mt-5">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-map-marked-alt text-primary mb-2"></i>
                                <h4 class="text-uppercase m-0">{{ blogpost.title }}</h4>
                                <hr class="my-4 mx-auto"/>
                                <div class="small text-black-50">{{ blogpost.content|u.truncate(150, '...', false) }}</div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(blogposts, 'base/pagination.html.twig') }}
            </div>
    </section>
{% endblock %}
